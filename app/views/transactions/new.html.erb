<h1>Create New Transaction</h1>

<%= form_with(model: @transaction, local: true) do |form| %> 
  <div>
    <%= form.label :book_id %>
    <%= form.collection_select(:book_id, Book.all, :id, :title) %>
  </div>

  <div>
    <%= form.label :member_id %>
    <%= form.collection_select(:member_id, Member.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :issue_date %>
    <%= form.date_field :issue_date %>
  </div>

  <div>
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.submit "Create Transaction" %>
  </div>

  <%= link_to "Back to Transactions", transactions_path %>
<% end %>
