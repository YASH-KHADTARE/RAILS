<h1>All Transactions</h1>

<% for transaction in @transactions do %>
  <div>
    <h2><%= transaction.book.title %></h2>
    <p>Member: <%= transaction.member.name %></p>
    <p>Issue Date: <%= transaction.issue_date %></p>
    <p>Due Date: <%= transaction.due_date %></p>
    <%= link_to 'Edit', edit_transaction_path(transaction) %>
    <%= link_to 'Delete', transaction_path(transaction), data: { turbo_method: :delete, turbo_confirm: "Are You Sure" } %>
  </div>
<% end %>

<%= link_to 'New Transaction', new_transaction_path %>

